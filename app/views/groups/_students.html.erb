<% @group.students.each.with_index do |student, index| %>
  <% if index == 0 %><div class="row small-gutter"><% end %>
    <div class="col-xs-2">
      <a href="<%= student_path(student) %>" class="thumbnail">
        <%= image_tag student.picture.url(:thumb) %>
        <div class="caption">
          <small><%= student.full_name %></small>
        </div>
      </a>
    </div>
  <% if (index + 1).modulo(5).zero? || (index + 1) == @group.students.each.count %>
    </div>
    <%= raw('<div class="row small-gutter">') unless (index + 1) == @group.students.each.count %>
  <% end %>
<% end %>
